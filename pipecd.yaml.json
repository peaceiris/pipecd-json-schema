{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$ref": "#/$defs/Config",
  "$defs": {
    "Config": {
      "oneOf": [
        {
          "required": [
            "spec"
          ],
          "title": "spec"
        }
      ],
      "properties": {
        "kind": {
          "type": "string",
          "enum": [
            "pipecd.dev/v1beta1"
          ]
        },
        "apiVersion": {
          "type": "string",
          "enum": [
            "KubernetesApp",
            "TerraformApp",
            "LambdaApp",
            "CloudRunApp",
            "ECSApp"
          ]
        },
        "spec": {
          "$ref": "#/$defs/KubernetesApplicationSpec"
        }
      },
      "type": "object",
      "required": [
        "kind",
        "apiVersion"
      ]
    },
    "DeploymentNotification": {
      "properties": {
        "mentions": {
          "items": {
            "$ref": "#/$defs/NotificationMention"
          },
          "type": "array"
        }
      },
      "type": "object",
      "required": [
        "mentions"
      ]
    },
    "DeploymentPipeline": {
      "properties": {
        "stages": {
          "items": {
            "$ref": "#/$defs/PipelineStage"
          },
          "type": "array"
        }
      },
      "type": "object",
      "required": [
        "stages"
      ]
    },
    "EventWatcherConfig": {
      "properties": {
        "matcher": {
          "$ref": "#/$defs/EventWatcherMatcher"
        },
        "handler": {
          "$ref": "#/$defs/EventWatcherHandler"
        }
      },
      "type": "object",
      "required": [
        "matcher",
        "handler"
      ]
    },
    "EventWatcherHandler": {
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "GIT_UPDATE"
          ]
        },
        "config": {
          "$ref": "#/$defs/EventWatcherHandlerConfig"
        }
      },
      "type": "object",
      "required": [
        "type",
        "config"
      ]
    },
    "EventWatcherHandlerConfig": {
      "properties": {
        "commitMessage": {
          "type": "string"
        },
        "replacements": {
          "items": {
            "$ref": "#/$defs/EventWatcherReplacement"
          },
          "type": "array"
        }
      },
      "type": "object",
      "required": [
        "replacements"
      ]
    },
    "EventWatcherMatcher": {
      "properties": {
        "name": {
          "type": "string"
        },
        "labels": {
          "patternProperties": {
            ".*": {
              "type": "string"
            }
          },
          "type": "object"
        }
      },
      "type": "object",
      "required": [
        "name"
      ]
    },
    "EventWatcherReplacement": {
      "oneOf": [
        {
          "required": [
            "yamlField"
          ],
          "title": "yamlField"
        },
        {
          "required": [
            "jsonField"
          ],
          "title": "jsonField"
        },
        {
          "required": [
            "hclField"
          ],
          "title": "hclField"
        }
      ],
      "properties": {
        "file": {
          "type": "string"
        },
        "yamlField": {
          "type": "string"
        },
        "jsonField": {
          "type": "string"
        },
        "hclField": {
          "type": "string"
        },
        "regex": {
          "type": "string"
        }
      },
      "type": "object",
      "required": [
        "file"
      ]
    },
    "InputHelmChart": {
      "properties": {
        "gitRemote": {
          "type": "string"
        },
        "ref": {
          "type": "string"
        },
        "path": {
          "type": "string"
        },
        "repository": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      },
      "type": "object",
      "required": [
        "gitRemote",
        "ref",
        "path",
        "repository",
        "name",
        "version"
      ]
    },
    "InputHelmOptions": {
      "properties": {
        "releaseName": {
          "type": "string"
        },
        "valueFiles": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "SetFiles": {
          "patternProperties": {
            ".*": {
              "type": "string"
            }
          },
          "type": "object"
        },
        "apiVersions": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "kubeVersion": {
          "type": "string"
        }
      },
      "type": "object",
      "required": [
        "releaseName",
        "valueFiles",
        "SetFiles",
        "apiVersions",
        "kubeVersion"
      ]
    },
    "K8sPrimaryRolloutStageOptions": {
      "properties": {
        "suffix": {
          "type": "string"
        },
        "createService": {
          "type": "boolean"
        },
        "addVariantLabelToSelector": {
          "type": "boolean"
        },
        "prune": {
          "type": "boolean"
        }
      },
      "type": "object"
    },
    "K8sResourceReference": {
      "properties": {
        "kind": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "type": "object",
      "required": [
        "kind",
        "name"
      ]
    },
    "K8sSyncStageOptions": {
      "properties": {
        "addVariantLabelToSelector": {
          "type": "boolean"
        },
        "prune": {
          "type": "boolean"
        }
      },
      "type": "object",
      "required": [
        "prune"
      ]
    },
    "KubernetesApplicationSpec": {
      "properties": {
        "name": {
          "type": "string"
        },
        "labels": {
          "patternProperties": {
            ".*": {
              "type": "string"
            }
          },
          "type": "object"
        },
        "description": {
          "type": "string"
        },
        "pipeline": {
          "$ref": "#/$defs/DeploymentPipeline"
        },
        "trigger": {
          "$ref": "#/$defs/Trigger"
        },
        "timeout": {
          "type": "string"
        },
        "encryption": {
          "$ref": "#/$defs/SecretEncryption"
        },
        "notification": {
          "$ref": "#/$defs/DeploymentNotification"
        },
        "eventWatcher": {
          "items": {
            "$ref": "#/$defs/EventWatcherConfig"
          },
          "type": "array"
        },
        "input": {
          "$ref": "#/$defs/KubernetesDeploymentInput"
        },
        "quickSync": {
          "$ref": "#/$defs/K8sSyncStageOptions"
        },
        "service": {
          "$ref": "#/$defs/K8sResourceReference"
        },
        "workloads": {
          "items": {
            "$ref": "#/$defs/K8sResourceReference"
          },
          "type": "array"
        },
        "variantLabel": {
          "$ref": "#/$defs/KubernetesVariantLabel"
        },
        "resourceRoutes": {
          "items": {
            "$ref": "#/$defs/KubernetesResourceRoute"
          },
          "type": "array"
        }
      },
      "type": "object",
      "required": [
        "name",
        "input"
      ]
    },
    "KubernetesDeploymentInput": {
      "properties": {
        "manifests": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "kubectlVersion": {
          "type": "string"
        },
        "kustomizeVersion": {
          "type": "string"
        },
        "kustomizeOptions": {
          "patternProperties": {
            ".*": {
              "type": "string"
            }
          },
          "type": "object"
        },
        "helmVersion": {
          "type": "string"
        },
        "helmChart": {
          "$ref": "#/$defs/InputHelmChart"
        },
        "helmOptions": {
          "$ref": "#/$defs/InputHelmOptions"
        },
        "namespace": {
          "type": "string"
        },
        "autoRollback": {
          "type": "boolean"
        }
      },
      "type": "object"
    },
    "KubernetesProviderMatcher": {
      "properties": {
        "name": {
          "type": "string"
        },
        "labels": {
          "patternProperties": {
            ".*": {
              "type": "string"
            }
          },
          "type": "object"
        }
      },
      "type": "object",
      "required": [
        "name",
        "labels"
      ]
    },
    "KubernetesResourceRoute": {
      "properties": {
        "provider": {
          "$ref": "#/$defs/KubernetesProviderMatcher"
        },
        "match": {
          "$ref": "#/$defs/KubernetesResourceRouteMatcher"
        }
      },
      "type": "object",
      "required": [
        "provider",
        "match"
      ]
    },
    "KubernetesResourceRouteMatcher": {
      "properties": {
        "kind": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "type": "object",
      "required": [
        "kind",
        "name"
      ]
    },
    "KubernetesVariantLabel": {
      "properties": {
        "key": {
          "type": "string"
        },
        "primaryValue": {
          "type": "string"
        },
        "canaryValue": {
          "type": "string"
        },
        "baselineValue": {
          "type": "string"
        }
      },
      "type": "object",
      "required": [
        "key",
        "primaryValue",
        "canaryValue",
        "baselineValue"
      ]
    },
    "NotificationMention": {
      "properties": {
        "event": {
          "type": "string"
        },
        "slack": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "email": {
          "items": {
            "type": "string"
          },
          "type": "array"
        }
      },
      "type": "object",
      "required": [
        "event"
      ]
    },
    "OnCommit": {
      "properties": {
        "disabled": {
          "type": "boolean"
        },
        "paths": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "ignores": {
          "items": {
            "type": "string"
          },
          "type": "array",
          "title": "ignores"
        }
      },
      "type": "object"
    },
    "PipelineStage": {
      "properties": {
        "name": {
          "type": "string"
        },
        "desc": {
          "type": "string"
        },
        "timeout": {
          "type": "string"
        },
        "waitStageOptions": {
          "$ref": "#/$defs/WaitStageOptions"
        },
        "waitApprovalStageOptions": {
          "$ref": "#/$defs/WaitApprovalStageOptions"
        },
        "k8sPrimaryRolloutStageOptions": {
          "$ref": "#/$defs/K8sPrimaryRolloutStageOptions"
        }
      },
      "type": "object"
    },
    "SecretEncryption": {
      "properties": {
        "encryptedSecrets": {
          "patternProperties": {
            ".*": {
              "type": "string"
            }
          },
          "type": "object"
        },
        "decryptionTargets": {
          "items": {
            "type": "string"
          },
          "type": "array"
        }
      },
      "type": "object",
      "required": [
        "encryptedSecrets",
        "decryptionTargets"
      ]
    },
    "Trigger": {
      "properties": {
        "onCommit": {
          "$ref": "#/$defs/OnCommit"
        }
      },
      "type": "object",
      "required": [
        "onCommit"
      ]
    },
    "WaitApprovalStageOptions": {
      "properties": {
        "timeout": {
          "type": "string"
        },
        "approvers": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "minApproverNum": {
          "type": "integer"
        }
      },
      "type": "object"
    },
    "WaitStageOptions": {
      "properties": {
        "duration": {
          "type": "string"
        }
      },
      "type": "object",
      "required": [
        "duration"
      ]
    }
  }
}
